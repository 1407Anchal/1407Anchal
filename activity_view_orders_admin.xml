<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ViewOrders">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:padding="10dp">


        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:background="@color/grey_300"
            android:onClick="showpending"
            android:text="Pending"
            android:id="@+id/pendingbtn"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:background="@color/grey_300"
            android:onClick="showaccepted"
            android:id="@+id/acceptedbtn"
            android:text="Accepted"
            android:textColor="@color/black"
            android:textSize="12sp" />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:background="@color/grey_300"
            android:onClick="showdispatched"
            android:id="@+id/dispatchedbtn"
            android:text="Dispatched"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:id="@+id/deliveredbtn"
            android:background="@color/grey_300"
            android:onClick="showdelivered"
            android:text="Delivered"
            android:textColor="@color/black"
            android:textSize="12sp" />


    </LinearLayout>


    <ListView
        android:id="@+id/orderslv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="No Orders"
        android:id="@+id/noordertv"
        />

</LinearLayout>
