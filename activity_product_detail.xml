<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout


        android:background="#F4DFC0"
    android:id="@+id/cl1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context=".ProductDetail">



        <ImageView
            android:id="@+id/productimageimv"
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:layout_margin="20dp"
            android:background="#D9F8B6"
             app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />


        <TextView
            android:id="@+id/productpricetv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="price"
            android:textSize="18dp"
            app:layout_constraintLeft_toRightOf="@id/productnametv"
            app:layout_constraintTop_toBottomOf="@id/productimageimv"
           app:layout_constraintRight_toRightOf="parent"/>


        <TextView
            android:id="@+id/productnametv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"

            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="name"
            android:textSize="19sp"
            android:layout_marginLeft="100dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/productimageimv" />
        <TextView
            android:id="@+id/productbrandtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"

            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="brand"
            android:textSize="19sp"
            android:layout_marginLeft="100dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/productnametv" />
<!--        <ScrollView-->
<!--            android:layout_width="match_parent"-->
<!--            android:id="@+id/scroll"-->
<!--            android:scrollbars="vertical"-->
<!--            android:orientation="vertical"-->
<!--            android:fillViewport="true"-->
<!--            app:layout_constraintTop_toBottomOf="@+id/productbrandtv"-->
<!--            android:layout_height="wrap_content">-->

        <TextView
            android:id="@+id/productdestv"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="Description"
            android:textSize="19sp"
            android:scrollbars="none"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/productbrandtv" />



        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:onClick="addtocartlogic"
            android:text="Add to Cart"
            android:textSize="24sp"
           android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"

            app:layout_constraintTop_toBottomOf="@id/productimageimv"

            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>